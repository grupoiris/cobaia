<?xml version="1.19" encoding='utf-8'?>
	<widget xmlns   = "http://www.w3.org/ns/widgets"
		xmlns:gap   = "http://phonegap.com/ns/47"
		id          = "com.cobaia.pepsi"
		versionCode = "47"
		version     = "1.19" > 
        
	<!-- versionCode is optional and Android only -->
	
	<name>Cobaia App</name>
	<description>
        Cobaia es un aplicativo que permite recopilar informacion por medio de encuestas, las cuales pueden estar conformadas por preguntas, video, audios e imagenes que ambientan al usuario en una situacion particular para cumplir el objetivo asociado a cada encuesta.
	</description>
	<author href="https://irisdev.co" email="lucia.lopez@grupoiris.co">
			Cobaia
	</author>    	
        
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
        
        
	<preference name="exit-on-suspend" value="true" />
	<preference name="keepRunning" value="true" />
	<preference name="permissions" value="none"/>
    <preference name="phonegap-version" value="cli-5.4.1" />
        
    <plugin name="com.phonegap.plugins.pushplugin" spec="2.5.0" source="pgb" />
    <plugin name="cordova-plugin-file-transfer" />
    <!--plugin name="cordova-plugin-network-information"  /-->
    <gap:plugin name="cordova-plugin-network-information" source="npm" version="1.2.0" />   
    <plugin name="org.apache.cordova.camera" />
    <plugin name="org.apache.cordova.device" />
    <plugin name="org.apache.cordova.file"  />
    <plugin name="org.apache.cordova.file-transfer" />
    <plugin name="org.apache.cordova.media-capture"  />

    <!--IOS-->    
    <!--feature name="PushPlugin">
      <param name="ios-package" value="PushPlugin" />
    </feature-->
	
	<feature name="org.apache.cordova.facebook.Connect">
		<param name="android-package" value="org.apache.cordova.facebook.ConnectPlugin" />
	</feature>
	
	<feature name="org.apache.cordova.facebook.Connect">
		<param name="ios-package" value="FacebookConnectPlugin" />
	</feature>
	
	<plugin name="com.phonegap.plugins.facebookconnect" spec="0.9.0" source="pgb">
		<param name="APP_ID" value="164171674018083" />
		<param name="APP_NAME" value="Cobaia" />
	</plugin>
	
